<!-- Trigger pour ouvrir la cart drawer depuis n'importe où -->
<button type="button" 
        class="feelcard-cart-trigger" 
        data-feelcard-cart-trigger
        aria-label="Ouvrir le panier ({{ cart.item_count }} {% if cart.item_count <= 1 %}article{% else %}articles{% endif %})">
  
  <!-- Icône panier -->
  <svg class="feelcard-trigger-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
    <circle cx="9" cy="21" r="1"/>
    <circle cx="20" cy="21" r="1"/>
    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
  </svg>
  
  <!-- Compteur avec animation -->
  {%- if cart.item_count > 0 -%}
    <span class="feelcard-trigger-count" data-feelcard-cart-count="{{ cart.item_count }}">
      {{ cart.item_count }}
    </span>
  {%- endif -%}
</button>

<style>
/* Styles isolés pour le trigger */
.feelcard-cart-trigger {
  position: relative;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.feelcard-cart-trigger:hover {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(1.05);
}

.feelcard-trigger-icon {
  width: 24px;
  height: 24px;
  stroke: currentColor;
  stroke-width: 1.5;
}

.feelcard-trigger-count {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #000000 0%, #404040 100%);
  color: white;
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.125rem 0.375rem;
  border-radius: 50px;
  min-width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(1);
  transition: transform 0.2s ease;
}

.feelcard-trigger-count[data-count="0"] {
  display: none;
}
</style>
