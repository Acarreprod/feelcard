<div class="scrolling-section" id="section-{{ section.id }}" 
     data-speed="{{ section.settings.scroll_speed }}"
     data-direction="{{ section.settings.direction }}">
  
  <div class="scroll-container">
    <div class="scroll-track">
      {% for block in section.blocks %}
        <div class="scroll-item scroll-item--{{ block.type }}" {{ block.shopify_attributes }}>
          {% case block.type %}
            {% when 'text_item' %}
              <span style="color: {{ block.settings.custom_color }}">
                {{ block.settings.text }}
              </span>
            {% when 'image_item' %}
              <img src="{{ block.settings.image | image_url: width: block.settings.image_width }}"
                   alt="{{ block.settings.alt_text | escape }}"
                   loading="lazy">
            {% when 'icon_item' %}
              <svg class="icon-{{ block.settings.icon }}" 
                   width="{{ block.settings.icon_size }}" 
                   height="{{ block.settings.icon_size }}">
                <use href="#icon-{{ block.settings.icon }}"></use>
              </svg>
          {% endcase %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>