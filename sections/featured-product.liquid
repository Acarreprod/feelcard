<script>
document.addEventListener('DOMContentLoaded', function() {
  // Offer selection functionality
  const offerOptions = document.querySelectorAll('.offer-option');
  const totalPriceDisplay = document.getElementById('total-price-display');
  const locationsSelect = document.querySelector('select[name="properties[Emplacements]"]');
  
  offerOptions.forEach(option => {
    option.addEventListener('click', function() {
      // Remove selected class from all options
      offerOptions.forEach(opt => opt.classList.remove('selected'));
      
      // Add selected class to clicked option
      this.classList.add('selected');
      
      // Update total price
      updateTotalPrice();
    });
  });

  if (locationsSelect) {
    locationsSelect.addEventListener('change', updateTotalPrice);
  }

  function updateTotalPrice() {
    const selectedOffer = document.querySelector('.offer-option.selected');
    const locations = locationsSelect ? parseInt(locationsSelect.value) : 1;
    
    if (selectedOffer && totalPriceDisplay) {
      const price = parseInt(selectedOffer.dataset.price);
      const total = (price * locations) / 100;
      totalPriceDisplay.textContent = total.toFixed(2) + ' € HT';
    }
  }

