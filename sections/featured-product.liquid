    color: #9ca3af;
  }

  .config-note {
    font-size: 14px;
    color: #6b7280;
    margin-top: 8px;
    line-height: 1.4;
  }

  .add-to-cart-section {
    margin: 32px 0;
  }

  .add-to-cart-btn {
    width: 100%;
    background: #3b82f6;
    color: #ffffff;
    border: none;
    padding: 16px 24px;
    border-radius: 8px;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .add-to-cart-btn:hover {
    background: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
  }

  .add-to-cart-btn:disabled {
    background: #9ca3af;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .total-price {
    text-align: center;
    margin-top: 16px;
    font-size: 14px;
    color: #6b7280;
  }

  .total-price strong {
    color: #000000;
    font-weight: 700;
  }

  .trust-badges {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid #e5e5e5;
  }

  .trust-badge {
    text-align: center;
  }

  .trust-badge-icon {
    width: 24px;
    height: 24px;
    margin: 0 auto 8px;
    opacity: 0.7;
  }

  .trust-badge-text {
    font-size: 12px;
    color: #6b7280;
  }

  .stock-notice {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    color: #ffffff;
    padding: 12px 20px;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
    margin-top: 16px;
    font-size: 14px;
  }

  /* Rating Stars */
  .product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 16px 0;
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .star {
    width: 16px;
    height: 16px;
    fill: #000000;
  }

  .rating-text {
    font-size: 14px;
    color: #6b7280;
  }

  /* Professional Badge */
  .professional-badge {
    display: inline-block;
    background: #f3f4f6;
    color: #374151;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .offer-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .offer-pricing {
