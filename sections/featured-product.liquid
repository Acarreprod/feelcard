    margin-top: 16px;
    font-size: 14px;
    color: #6b7280;
  }

  .total-price strong {
    color: #000000;
    font-weight: 700;
  }

  .trust-badges {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid #e5e5e5;
  }

