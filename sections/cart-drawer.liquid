<cart-drawer {% if request.design_mode %}handle-section-events{% endif %} class="cart-drawer drawer drawer--lg feelcard-enhanced" id="cart-drawer">
  {%- if cart.item_count == 0 -%}
    <button is="close-button" aria-label="{{ 'general.accessibility.close' | t | escape }}" class="feelcard-close-btn">
      {%- render 'icon' with 'close' -%}
    </button>
    <div class="empty-state align-self-center feelcard-empty-state">
      <div class="empty-state__icon-wrapper feelcard-empty-icon">
        {%- render 'icon' with 'cart', width: 32, height: 32, stroke_width: 1 -%}
        <span class="count-bubble count-bubble--lg feelcard-count-bubble">0</span>
      </div>
      <div class="prose feelcard-empty-content">
        <p class="h5 feelcard-empty-title">{{ 'cart.general.empty' | t }}</p>
        <p class="feelcard-empty-subtitle">Découvrez nos produits exceptionnels</p>
        {%- assign button_content = 'cart.general.continue_shopping' | t -%}
        {%- render 'button', href: settings.cart_empty_button_link, size: 'xl', content: button_content, class: 'feelcard-btn-primary' -%}
      </div>
    </div>
  {%- else -%}
    <div class="cart-drawer__inner feelcard-drawer-inner">
      <!-- Header compact -->
      <div class="cart-drawer__top feelcard-header">
        <div class="feelcard-header-content">
          <div class="feelcard-header-main">
            <div class="feelcard-title-section">
              <p class="h5 feelcard-title">{{- 'cart.general.title' | t -}}</p>
              <cart-count class="count-bubble count-bubble--md feelcard-count-bubble">{{ cart.item_count }}</cart-count>
            </div>
            <button type="button" is="close-button" class="drawer__close-icon feelcard-close-btn">
              <span class="sr-only">{{ 'general.accessibility.close' | t }}</span>
              {%- render 'icon' with 'close' -%}
            </button>
          </div>
          
          {%- if settings.cart_show_free_shipping_threshold -%}
            <div class="feelcard-shipping-wrapper">
              {%- render 'free-shipping-bar' -%}
            </div>
          {%- endif -%}
        </div>
      </div>
      
      <!-- Zone produits (70%) -->
      <div class="feelcard-products-zone">
        <div class="feelcard-content">
          
          <!-- Articles du panier compacts -->
          <div class="cart-drawer__line-items feelcard-line-items">
            {%- for line_item in cart.items -%}
              <div class="feelcard-line-item-wrapper feelcard-line-item-compact" data-line-item="{{ forloop.index }}">
                {%- render 'line-item', line_item: line_item, show_desktop_quantity: true -%}
              </div>
            {%- endfor -%}
          </div>
          
          <!-- Recommandations compactes -->
          {%- if section.settings.products.count > 0 -%}
            <div class="cart-drawer__recommendations feelcard-recommendations feelcard-recommendations-compact">
              {%- capture carousel_id -%}cart-drawer-recommendations{%- endcapture -%}
              {%- liquid
                assign horizontal_products_blends = true
                assign product_card_background = section.settings.product_card_background | default: product.settings.product_card_background
                if product_card_background != 'rgba(0,0,0,0)' and product_card_background != blank and product_card_background != settings.dialog_background
                  assign horizontal_products_blends = false
                endif
                assign rendered_recommendations = 0
                capture recommendations
                  for recommended_product in section.settings.products
                    assign item_count_in_cart = cart | line_items_for: recommended_product
                    if item_count_in_cart.size == 0
                      render 'horizontal-product', product: recommended_product, show_add_to_cart: true, background: section.settings.product_card_background, text_color: section.settings.product_card_text_color
                      assign rendered_recommendations = rendered_recommendations | plus: 1
                    endif
                  endfor
                endcapture
              -%}
              
              {%- if rendered_recommendations > 0 -%}
                <div class="feelcard-recommendations-header">
                  {%- if section.settings.recommendations_title != blank -%}
                    <h3 class="feelcard-recommendations-title">{{ section.settings.recommendations_title | escape }}</h3>
                  {%- endif -%}
                  {%- if rendered_recommendations > 1 -%}
                    <div class="feelcard-carousel-controls">
                      <button is="prev-button" class="feelcard-carousel-btn feelcard-carousel-prev" aria-controls="{{ carousel_id }}" aria-label="{{ 'general.accessibility.previous' | t | escape }}" disabled>
                        {%- render 'icon' with 'chevron-left-small', direction_aware: true -%}
                      </button>
                      <button is="next-button" class="feelcard-carousel-btn feelcard-carousel-next" aria-controls="{{ carousel_id }}" aria-label="{{ 'general.accessibility.next' | t | escape }}">
                        {%- render 'icon' with 'chevron-right-small', direction_aware: true -%}
                      </button>
                    </div>
                  {%- endif -%}
                </div>
                
                <scroll-carousel selector=".horizontal-product" id="{{ carousel_id }}" class="feelcard-carousel-container">
                  <div class="horizontal-product-list feelcard-product-list">
                    {{- recommendations -}}
                  </div>
                </scroll-carousel>
              {%- endif -%}
            </div>
          {%- endif -%}
          
        </div>
      </div>
    </div>
    
    <!-- Footer compact (30%) -->
    <div class="feelcard-footer-compact" slot="footer">
      <div class="feelcard-footer-content">
        
        <!-- Section des réductions compacte -->
        {%- if cart.cart_level_discount_applications.size > 0 -%}
          <div class="feelcard-discounts-section feelcard-discounts-compact">
            {% for discount_application in cart.cart_level_discount_applications %}
              <div class="feelcard-discount-item feelcard-discount-compact">
                <div class="feelcard-discount-info">
                  <div class="feelcard-discount-badge">
                    {%- render 'icon' with 'discount' -%}
                    <span>{{- discount_application.title -}}</span>
                  </div>
                </div>
                <span class="feelcard-discount-amount">-{{ discount_application.total_allocated_amount | money }}</span>
              </div>
            {% endfor %}
          </div>
        {%- endif -%}
        
        <!-- Note de commande compacte et fonctionnelle -->
        {%- if section.settings.show_cart_note -%}
          <div class="feelcard-note-section feelcard-note-compact">
            <cart-note class="feelcard-note-form" id="cart-note-form">
              <div class="feelcard-note-wrapper">
                <label for="cart-note" class="feelcard-note-label">
                  <svg class="feelcard-note-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14,2 14,8 20,8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10,9 9,9 8,9"/>
                  </svg>
                  {{ 'cart.general.order_note' | t }}
                </label>
                <textarea 
                  id="cart-note"
                  name="note" 
                  class="feelcard-note-textarea" 
                  placeholder="Instructions spéciales pour votre commande..."
                  rows="2">{{ cart.note }}</textarea>
                <div class="feelcard-note-actions">
                  <button type="button" class="feelcard-note-save feelcard-btn-save" data-action="save-note">
                    <svg class="feelcard-save-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <polyline points="20,6 9,17 4,12"/>
                    </svg>
                    <span class="feelcard-save-text">Enregistrer</span>
                    <div class="feelcard-save-loading">
                      <div class="feelcard-spinner-small"></div>
                    </div>
                  </button>
                </div>
              </div>
            </cart-note>
          </div>
        {%- endif -%}
        
        <!-- Section du total compacte -->
        <div class="feelcard-total-section feelcard-total-compact">
          <div class="feelcard-total-line">
            <span class="feelcard-total-label">{{ 'cart.general.total' | t }}</span>
            <span class="feelcard-total-price">{{- cart.total_price | money_with_currency -}}</span>
          </div>
          
          {%- if section.settings.show_shipping_text -%}
            <div class="feelcard-shipping-info feelcard-shipping-compact">
              {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                <p>{{ 'cart.general.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}</p>
              {%- elsif cart.taxes_included -%}
                <p>{{ 'cart.general.taxes_included_but_shipping_at_checkout' | t }}</p>
              {%- elsif shop.shipping_policy.body != blank -%}
                <p>{{ 'cart.general.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}</p>
              {%- else -%}
                <p>{{ 'cart.general.taxes_and_shipping_at_checkout' | t }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
        
        <!-- Section des boutons d'action compacte -->
        <div class="feelcard-actions-section feelcard-actions-compact">
          <form action="{{ routes.cart_url }}" method="POST" class="feelcard-checkout-form">
            <div class="feelcard-buttons-grid feelcard-buttons-compact">
              {%- if section.settings.show_view_cart_button or section.settings.show_checkout_button == false -%}
                <a href="{{ routes.cart_url }}" class="feelcard-btn feelcard-btn-secondary feelcard-btn-compact" data-no-instant>
                  <svg class="feelcard-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.35 2.65c-.14.15-.25.32-.25.5 0 .83.67 1.5 1.5 1.5H19M7 13v4a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2v-4m-9 0h9"/>
                  </svg>
                  Panier
                </a>
              {%- endif -%}
              
              {%- if section.settings.show_checkout_button -%}
                <button type="submit" name="checkout" class="feelcard-btn feelcard-btn-primary feelcard-checkout-btn feelcard-btn-compact">
                  <span class="feelcard-btn-text">
                    <svg class="feelcard-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path d="M9 12l2 2 4-4"/>
                      <circle cx="12" cy="12" r="10"/>
                    </svg>
                    Acheter
                  </span>
                  <div class="feelcard-btn-loading">
                    <div class="feelcard-spinner"></div>
                  </div>
                </button>
              {%- endif -%}
            </div>
          </form>
        </div>
        
        <!-- Badges de confiance compacts -->
        <div class="feelcard-trust-section feelcard-trust-compact">
          <div class="feelcard-trust-badges">
            <div class="feelcard-trust-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
              <span>Sécurisé</span>
            </div>
            <div class="feelcard-trust-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="8.5" cy="7" r="4"/>
                <line x1="20" y1="8" x2="20" y2="14"/>
                <line x1="23" y1="11" x2="17" y2="11"/>
              </svg>
              <span>Support</span>
            </div>
            <div class="feelcard-trust-item">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <polyline points="23,4 23,10 17,10"/>
                <polyline points="1,20 1,14 7,14"/>
                <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"/>
              </svg>
              <span>Retours</span>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  {%- endif -%}
</cart-drawer>

<!-- JavaScript pour la gestion des notes -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const noteForm = document.getElementById('cart-note-form');
  const noteTextarea = document.getElementById('cart-note');
  const saveButton = document.querySelector('[data-action="save-note"]');
  
  if (!noteForm || !noteTextarea || !saveButton) return;
  
  let saveTimeout;
  
  // Fonction pour sauvegarder la note
  async function saveNote() {
    const noteText = noteTextarea.value.trim();
    
    // Afficher le loading
    saveButton.classList.add('loading');
    saveButton.disabled = true;
    
    try {
      const formData = new FormData();
      formData.append('note', noteText);
      
      const response = await fetch('/cart/update.js', {
        method: 'POST',
        body: formData
      });
      
      if (response.ok) {
        const cart = await response.json();
        
        // Succès - afficher feedback visuel
        saveButton.classList.add('success');
        
        // Dispatch event pour notifier les autres composants
        document.dispatchEvent(new CustomEvent('cart:note-updated', {
          detail: { note: cart.note }
        }));
        
        // Réinitialiser après 2 secondes
        setTimeout(() => {
          saveButton.classList.remove('success');
        }, 2000);
        
      } else {
        throw new Error('Erreur lors de la sauvegarde');
      }
      
    } catch (error) {
      console.error('Erreur sauvegarde note:', error);
      
      // Afficher erreur
      saveButton.classList.add('error');
      setTimeout(() => {
        saveButton.classList.remove('error');
      }, 3000);
      
    } finally {
      // Masquer le loading
      saveButton.classList.remove('loading');
      saveButton.disabled = false;
    }
  }
  
  // Event listener pour le bouton sauvegarder
  saveButton.addEventListener('click', saveNote);
  
  // Auto-save après 2 secondes d'inactivité
  noteTextarea.addEventListener('input', function() {
    clearTimeout(saveTimeout);
    saveTimeout = setTimeout(saveNote, 2000);
  });
  
  // Sauvegarder aussi sur blur
  noteTextarea.addEventListener('blur', function() {
    clearTimeout(saveTimeout);
    if (noteTextarea.value.trim() !== (window.initialCartNote || '')) {
      saveNote();
    }
  });
  
  // Stocker la valeur initiale
  window.initialCartNote = noteTextarea.value.trim();
});
</script>

