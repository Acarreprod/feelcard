    // Ajouter via l'API Shopify
    const addFormData = new FormData()
    addFormData.append("id", variantId)
    addFormData.append("quantity", quantity)

    fetch("/cart/add.js", {
      method: "POST",
      body: addFormData,
    })
      .then((response) => response.json())
      .then((item) => {
