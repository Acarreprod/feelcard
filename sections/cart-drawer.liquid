  color: var(--feelcard-white);
  box-shadow: var(--feelcard-shadow-medium);
}

.feelcard-btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left var(--feelcard-transition);
}

.feelcard-btn-primary:hover {
  background: var(--feelcard-gradient-hover);
  transform: translateY(-2px);
  box-shadow: var(--feelcard-shadow-strong);
}

.feelcard-btn-primary:hover::before {
  left: 100%;
}

.feelcard-btn-secondary {
  background: var(--feelcard-gradient-secondary);
  color: var(--feelcard-black);
  border: 1px solid var(--feelcard-gray-ultra-light);
  box-shadow: var(--feelcard-shadow-subtle);
}

.feelcard-btn-secondary:hover {
  background: var(--feelcard-gradient-accent);
  color: var(--feelcard-white);
  transform: translateY(-1px);
  box-shadow: var(--feelcard-shadow-medium);
}

/* ===== BOUTON CHECKOUT AVEC LOADING ===== */
.feelcard-checkout-btn {
  position: relative;
}

.feelcard-btn-text {
  transition: opacity var(--feelcard-transition);
}

.feelcard-btn-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  visibility: hidden;
  transition: all var(--feelcard-transition);
}

.feelcard-checkout-btn.loading .feelcard-btn-text {
  opacity: 0;
}

.feelcard-checkout-btn.loading .feelcard-btn-loading {
  opacity: 1;
  visibility: visible;
}

.feelcard-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top: 2px solid var(--feelcard-white);
  border-radius: 50%;
  animation: feelcard-spin 1s linear infinite;
}

/* ===== BARRE DE LIVRAISON ===== */
.feelcard-shipping-wrapper {
  margin-top: var(--feelcard-spacing-md);
  padding: var(--feelcard-spacing-md);
  background: var(--feelcard-gradient-subtle);
  border-radius: var(--feelcard-radius);
  border: 1px solid var(--feelcard-gray-ultra-light);
}

/* ===== ANIMATIONS ===== */
@keyframes feelcard-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes feelcard-shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

@keyframes feelcard-pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

