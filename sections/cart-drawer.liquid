  border-radius: var(--feelcard-radius-small);
  padding: 1rem;
  border: 2px solid var(--feelcard-gray-ultra-light);
  margin: 1rem 0;
}

.feelcard-total-label,
.feelcard-total-price {
  background: var(--feelcard-gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
}

/* ===== BOUTONS PRINCIPAUX ===== */
.feelcard-btn-primary {
  background: var(--feelcard-gradient-primary) !important;
  color: var(--feelcard-white) !important;
  border: none !important;
  border-radius: var(--feelcard-radius) !important;
  box-shadow: var(--feelcard-shadow-medium) !important;
  transition: all var(--feelcard-transition) !important;
  position: relative !important;
  overflow: hidden !important;
}

.feelcard-btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left var(--feelcard-transition);
}

.feelcard-btn-primary:hover {
  background: var(--feelcard-gradient-hover) !important;
  transform: translateY(-2px) !important;
  box-shadow: var(--feelcard-shadow-strong) !important;
}

.feelcard-btn-primary:hover::before {
  left: 100%;
}

.feelcard-btn-secondary {
  background: var(--feelcard-gradient-secondary) !important;
  color: var(--feelcard-black) !important;
  border: 1px solid var(--feelcard-gray-ultra-light) !important;
  border-radius: var(--feelcard-radius) !important;
  box-shadow: var(--feelcard-shadow-subtle) !important;
  transition: all var(--feelcard-transition) !important;
}

.feelcard-btn-secondary:hover {
  background: var(--feelcard-gradient-accent) !important;
  color: var(--feelcard-white) !important;
  transform: translateY(-1px) !important;
  box-shadow: var(--feelcard-shadow-medium) !important;
}

/* ===== NOTE DE COMMANDE ===== */
.feelcard-note-toggle {
  color: var(--feelcard-gray) !important;
  transition: color var(--feelcard-transition) !important;
}

.feelcard-note-toggle:hover {
  color: var(--feelcard-black) !important;
}

.feelcard-note-dialog {
  background: var(--feelcard-gradient-subtle) !important;
  border-radius: var(--feelcard-radius-large) !important;
  box-shadow: var(--feelcard-shadow-dramatic) !important;
  border: 1px solid var(--feelcard-gray-ultra-light) !important;
}

.feelcard-note-title {
  background: var(--feelcard-gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 600;
}

/* ===== BARRE DE LIVRAISON ===== */
.feelcard-shipping-wrapper {
  margin-top: 1rem;
  padding: 1rem;
  background: var(--feelcard-gradient-subtle);
  border-radius: var(--feelcard-radius);
  border: 1px solid var(--feelcard-gray-ultra-light);
}

/* ===== ANIMATIONS ===== */
@keyframes feelcard-shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

@keyframes feelcard-pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
  .feelcard-header,
  .feelcard-content,
  .feelcard-footer {
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  .feelcard-line-item-wrapper {
    margin-bottom: 0.75rem;
  }
  
  .feelcard-recommendations {
    padding: 1rem;
  }
}

/* ===== DARK MODE ===== */
@media (prefers-color-scheme: dark) {
  .feelcard-enhanced {
    --feelcard-white: #1a1a1a;
    --feelcard-white-soft: #2a2a2a;
    --feelcard-gray-subtle: #2a2a2a;
    --feelcard-gray-ultra-light: #333333;
    --feelcard-black: #ffffff;
    --feelcard-gradient-subtle: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    --feelcard-gradient-secondary: linear-gradient(135deg, #2a2a2a 0%, #333333 100%);
  }
}

/* ===== ACCESSIBILIT√â ===== */
@media (prefers-reduced-motion: reduce) {
  .feelcard-enhanced * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* Focus visible pour l'accessibilit√© */
.feelcard-enhanced button:focus-visible,
.feelcard-enhanced a:focus-visible {
  outline: 2px solid var(--feelcard-black);
  outline-offset: 2px;
}
