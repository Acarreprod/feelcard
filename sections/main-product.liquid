    align-items: flex-start;
    gap: 20px;
  }

  .offer-radio {
    width: 24px;
    height: 24px;
    border: 2px solid #d1d5db;
    border-radius: 50%;
    position: relative;
    flex-shrink: 0;
    margin-top: 2px;
    transition: all 0.3s ease;
  }

  .offer-option.selected .offer-radio {
    border-color: #3b82f6;
    background: #3b82f6;
  }

  .offer-option.selected .offer-radio::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: #ffffff;
    border-radius: 50%;
  }

  .offer-details {
    flex: 1;
  }

  .offer-title {
    font-size: 24px;
    font-weight: 700;
    color: #000000;
    margin-bottom: 8px;
    line-height: 1.2;
  }

  .offer-bonus {
    font-size: 16px;
    color: #6b7280;
    margin-bottom: 4px;
